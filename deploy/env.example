# EngRisk Student Management - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=student_management
POSTGRES_USER=engrisk_user
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT_BE=3001
PORT_FE=3000
FRONTEND_URL=https://your-domain.com
API_PREFIX=api/v1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
NEXT_PUBLIC_APP_NAME=EngRisk Student Management
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# DEFAULT PASSWORDS (for development/seeding)
# =============================================================================
ADMIN_PASSWORD=your-secure-admin-password-here
DEFAULT_STUDENT_PASSWORD=your-default-student-password-here

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
IMAGE_NAME=engrisk-student-management
TAG=latest

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit actual passwords or secrets to version control
# 2. Use strong, unique passwords for production
# 3. Rotate secrets regularly
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service for production
