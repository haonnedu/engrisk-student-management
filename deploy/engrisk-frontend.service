[Unit]
Description=EngRisk Student Management Frontend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/engrisk-student-management/fe
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
