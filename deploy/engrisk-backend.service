[Unit]
Description=EngRisk Student Management Backend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/engrisk-student-management/be
ExecStart=/usr/bin/node dist/main.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=DATABASE_URL=postgresql://engrisk_user:EngRisk2024!SecureDB#789@localhost:5432/student_management
Environment=JWT_SECRET=EngRisk2024!JWTSecretKey#456!Production
Environment=PORT=3001

[Install]
WantedBy=multi-user.target
